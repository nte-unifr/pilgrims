{% extends 'base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block navbar_sub %}
  <div class="navbar-nav d-none d-md-flex">
    <li class="nav-item">
      <a class="nav-link" href="{{ path('sites_index') }}">Sites</a>
    </li>
  </div>
{% endblock %}

{% block body %}
  <div class="container">
    <div id="page">
      <h1 class="h2 mb-4">
        {{ page.title }}
      </h1>
      <div>
        {{ page.content | markdown }}
      </div>
    </div>
  </div>
{% endblock %}