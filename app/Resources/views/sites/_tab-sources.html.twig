{% if site.sources %}
  <div class="list-group list-group-flush mb-5">
    {% for source in site.sources %}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <blockquote class="blockquote mb-0">
          <p class="mb-0">{{ source.title }}</p>
          <footer class="blockquote-footer">{{ source.year }}, {{ source.traveler }}</footer>
        </blockquote>
        <button type="button" class="btn btn-primary btn-sm popover-toggler" data-toggler="popover" data-content="{{ source.editions | markdown | e }}" data-html="true" title="Editions">
          <i class="fas fa-books"></i> ED
        </button>
      </li>
    {% endfor %}
  </div>
{% endif %}
{% if site.sourcesQuotation %}
  <div class="enable-blockquote">
    <h3 class="mb-4">Quotes</h3>
    {{ site.sourcesQuotation | markdown }}
  </div>
{% endif %}