<div class="row">
  <div class="col-12 col-md-8">
    <ul class="nav nav-pills flex-column flex-md-row mb-4">
      <li class="nav-item mb-2 mr-2">
        <a class="nav-link" href="#" data-mixitup-control data-filter="all">All</a>
      </li>
      {% for region in regions %}
        <li class="nav-item mb-2 mr-2">
          <a class="nav-link" href="#" data-mixitup-control data-filter=".region-{{ region.id }}">
            {{ region.title }}
          </a>
        </li>
      {% endfor %}
      <li class="nav-item mb-2 mr-2 d-flex align-items-center">
        <a class="btn no-pointer">
          <i class="fas fa-layer-group"></i> <span class="badge badge-light"><span id="sites-counter">{{ sites | length }}</span>/{{ sites | length }}</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="col-12 col-md-4">
    <ul class="nav nav-pills flex-column flex-md-row mb-4 justify-content-end">
      <li class="nav-item mb-2 mr-2">
        <a class="nav-link" href="#" data-mixitup-control data-sort="lon:asc lat:asc title:asc">Longitude <i class="fas fa-sort-numeric-down"></i></a>
      </li>
      <li class="nav-iem mb-2">
        <a class="nav-link" href="#" data-mixitup-control data-sort="title:asc lon:asc lat:asc">Alphabetic <i class="fas fa-sort-alpha-down"></i></a>
      </li>
    </ul>
  </div>
</div>