<div class="modal fade" id="historicalSourcesModal{{ historicalSource.id }}" tabindex="-1" role="dialog" aria-labelledby="historicalSourcesModal{{ historicalSource.id }}Label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="historicalSourcesModal{{ historicalSource.id }}Label">{{ historicalSource.title }}</h4>
      </div>
      <div class="modal-body">
        {{ historicalSource.content }}
      </div>
    </div>
  </div>
</div>
